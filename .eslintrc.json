{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "^(SET_|TOGGLE_|CLEAR_|RESET_|REVEAL_|HIDE_|LOADING)"
      }
    ],
    "prefer-const": "error",
    "no-var": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "undefined": "Use a specific type instead of undefined"
        }
      }
    ]
  },
  "noInlineConfig": true,
  "reportUnusedDisableDirectives": true
}
